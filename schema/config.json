{ 
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "config",
    "type": "object",
    "description": "Describe a Updatecli Pipeline",
    "unevaluatedProperties": false,
    "properties": {
        "conditions": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z_][A-Za-z0-9_]*$": {
                "type": "object",
                "oneOf": [
                    { "$ref" : "/resource/condition/jenkins" },
                    { "$ref" : "/resource/condition/maven" }
                ]
              }
            }
        },
        "sources": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z_][A-Za-z0-9_]*$": {
                "type": "object",
                "oneOf": [
                    { "$ref" : "/resource/source/jenkins" },
                    { "$ref" : "/resource/source/maven" }
                ]
              }
            }
        },
        "title": {
            "description": "Set pipeline title",
            "type": "string"
        }
    },
    "required": [
        "title"
    ]
}
