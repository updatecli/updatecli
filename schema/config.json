{ 
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "config",
    "type": "object",
    "description": "Describe a Updatecli Pipeline",
    "unevaluatedProperties": false,
    "properties": {
        "conditions": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z_][A-Za-z0-9_]*$": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name" :{
                    "type": "string"
                  },
                  "disablesourceinput": {
                      "description": "Define source name",
                      "type": "boolean"
                  },
                  "sourceID": {
                      "description": "Define which source should be used for the default value",
                      "type": "string"
                  },
                  "kind": {
                      "type": "string"
                  },
                  "spec": {
                      "type": "object"
                  }
                },
                "oneOf": [
                    {
                      "type": "object",
                      "required": ["kind"],
                      "additionalProperties": true,
                      "properties": {
                        "kind": {
                          "enum": ["jenkins"]
                        },
                        "spec": { 
                          "$ref": "/resource/condition/jenkins"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": ["kind"],
                      "additionalProperties": false,
                      "properties": {
                        "kind": {
                          "enum": ["maven"]
                        },
                        "spec": { 
                          "$ref": "/resource/condition/maven"
                        }
                      }
                    }
                ]
              }
            }
        },
        "sources": {
            "type": "object",
            "patternProperties": {
              "^[A-Za-z_][A-Za-z0-9_]*$": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "description": "Define source name",
                    "type": "string"
                  }
                },
                "oneOf": [
                    {
                      "type": "object",
                      "required": ["kind"],
                      "additionalProperties": true,
                      "properties": {
                        "kind": {
                          "enum": ["jenkins"]
                        },
                        "spec": { 
                          "$ref": "/resource/source/jenkins"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": ["kind"],
                      "additionalProperties": false,
                      "properties": {
                        "kind": {
                          "enum": ["maven"]
                        },
                        "spec": { 
                          "$ref": "/resource/source/maven"
                        }
                      }
                    }
                ]
              }
            }
        },
        "title": {
            "description": "Set pipeline title",
            "type": "string"
        }
    },
    "required": [
        "title"
    ]
}
