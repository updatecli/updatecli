{ 
    "$schema": "https://json-schema.org/draft/2020-12/schema" ,
    "$id": "/schema/pipeline",
    "type": "object",
    "description": "Describe a Updatecli Pipeline",
    "properties": {
        "conditions": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref" : "/resource/condition/jenkins" }
                ]
            }
        },
        "sources": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref" : "/resource/source/jenkins" }
                ]
            }
        },
        "title": {
            "description": "Set pipeline title",
            "type": "string"
        }
    },
    "required": [
        "title"
    ]
}