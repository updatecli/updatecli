{ 
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://www.updatecli.io/schema/pipeline",
    "type": "object",
    "description": "Describe a Updatecli Pipeline",
    "properties": {
        "conditions": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref" : "/schema/resource/condition/jenkins" }
                ]
            }
        },
        "sources": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref" : "/schema/resource/source/jenkins" }
                ]
            }
        },
        "title": {
            "description": "Set pipeline title",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "title"
    ]
}