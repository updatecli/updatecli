{ 
    "$schema": "https://json-schema.org/draft/2020-12/schema" ,
    "$id": "/resource/condition/jenkins",
    "type": "object",
    "description": "Test if a specific Jenkins version exist",
    "required": [
        "title",
        "kind",
        "spec"
    ],
    "properties": {
        "title": {
            "description": "Jenkins source title",
            "type": "string"
        },
        "kind": {
            "description": "Define source kind",
            "enum": ["jenkins"] 
        },
        "spec" : {
            "description": "Define Jenkins source parameters",
            "type": "object",
            "properties": {
                "release": {
                    "description": "Define Jenkins release type",
                    "enum": [
                        "stable",
                        "weekly"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "Specify Jenkins version which should exist"
                }
            } 
        }
    }
}