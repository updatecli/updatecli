{ 
    "$id": "/resource/source/jenkins",
    "type": "object",
    "description": "Get latest Jenkins version",
    "unevaluatedProperties": false,
    "required": [
      "kind",
      "spec"
    ],
    "allOf": [{ "$ref": "/resource/source_base" }],
    "properties": {
        "kind": {
            "description": "Define source kind",
            "enum": ["jenkins"] 
        },
        "spec" : {
            "description": "Define Jenkins source parameters",
            "type": "object",
            "properties": {
                "release": {
                    "description": "Define Jenkins release type",
                    "enum": [
                        "stable",
                        "weekly"
                    ]
                }
            } 
        }
    }
}
